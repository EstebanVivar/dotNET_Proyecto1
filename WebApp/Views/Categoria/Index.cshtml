@model IEnumerable<Categoria>
@{
	ViewData["Title"] = "Index";
}

<partial name="_Notificacion" />
<div class="container p-3">

	<div class="row pt-4">
		<div class="col-6">
			<h1>Lista</h1>

		</div>
		<div class="col-6 text-end">
			<a asp-controller="Categoria" asp-action="Create" class="btn btn-primary">
				Crear nueva categoria
			</a>

		</div>
	</div>
	<br />


	<table class="table table-hover table-striped table-bordered" style="width:100%">
		<thead>
			<tr>
				<th scope="col">
					Name
				</th>
				<th scope="col">
					Order
				</th>
				<th scope="col">					
				</th>
			</tr>
		</thead>
		<tbody>
			@if (Model?.Count() > 0)
			{
				foreach (var obj in Model)
				{
					<tr>
						<td width="50%">
							@obj.Name
						</td>
						<td width="30%">
							@obj.displayOrder
						</td>
						<td class="w-75 btn-group-lg" role="group">
							<a asp-controller="Categoria" asp-action="Edit" asp-route-id="@obj.id"
							class="btn btn-primary mx-2">Editar</a>
						</td>
						<td class="w-75 btn-group-lg" role="group">
							<a asp-controller="Categoria" asp-action="Delete" asp-route-id="@obj.id"
							class="btn btn-danger mx-2">Borrar</a>
						</td>
					</tr>
				}
			}
		</tbody>

	</table>
</div>